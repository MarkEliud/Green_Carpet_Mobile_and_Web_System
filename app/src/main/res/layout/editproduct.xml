<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/image_viewl"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />
            <Button
                android:id="@+id/select_image_button"
                android:text="Update Image"
                android:textStyle="bold"
                android:background="#42B15A"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/image_viewl1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/image_viewl"
            >
            <TextView
                android:id="@+id/size"
                android:hint="Name:  "
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/name_edit_text"
                android:hint="insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/image_viewl12"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/image_viewl1"
            >
            <TextView

                android:hint="Packages:  "
                android:textSize="18dp"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/date_edit_text"
                android:hint="insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/image_viewl123"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/image_viewl12"
            >
            <TextView

                android:hint="Description:  "
                android:textSize="18dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>
            <EditText
                android:id="@+id/description_edit_text"
                android:hint="insert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_viewl"
                android:layout_marginTop="16dp"/>

        </LinearLayout>



        <Button
            android:id="@+id/upload_button"
            android:text="Update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_viewl123"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:background="#42B15A"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

</RelativeLayout>