<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="update"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/textView26"
         android:id="@+id/quantiy_no">

         <EditText
             android:id="@+id/title"

             android:layout_height="wrap_content"
             android:hint="Update title"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"

             android:inputType="text"
             android:textCursorDrawable="@drawable/colour_cursor"
             android:textColor="@color/colorPrimary"
             android:theme="@style/AppTheme"

             android:layout_width="match_parent"/>
         <EditText
             android:id="@+id/desc"

             android:layout_height="wrap_content"
             android:hint="Update Description"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"


             android:textCursorDrawable="@drawable/colour_cursor"
             android:textColor="@color/colorPrimary"
             android:theme="@style/AppTheme"
             android:gravity="start"
             android:inputType="textMultiLine"
             android:imeOptions="actionDone"
             android:minLines="5"
             android:background="@color/lighgrey"

             android:layout_width="match_parent"/>
         <EditText
             android:id="@+id/price"

             android:layout_height="wrap_content"
             android:hint="Update price"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"

             android:inputType="text"
             android:textCursorDrawable="@drawable/colour_cursor"
             android:textColor="@color/colorPrimary"
             android:theme="@style/AppTheme"

             android:layout_width="match_parent"/>
         <EditText
             android:id="@+id/dura"

             android:layout_height="wrap_content"
             android:hint="Update duration"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"

             android:inputType="text"
             android:textCursorDrawable="@drawable/colour_cursor"
             android:textColor="@color/colorPrimary"
             android:theme="@style/AppTheme"

             android:layout_width="match_parent"/>
         <EditText
             android:id="@+id/doctor"

             android:layout_height="wrap_content"
             android:hint="Update relevant physician"
             android:layout_marginStart="16dp"
             android:layout_marginTop="16dp"
             android:layout_marginEnd="16dp"

             android:inputType="text"
             android:textCursorDrawable="@drawable/colour_cursor"
             android:textColor="@color/colorPrimary"
             android:theme="@style/AppTheme"

             android:layout_width="match_parent"/>
     </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quantiy_no">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="cancel"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="ok"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

    <View
        android:id="@+id/divider16"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout9" />

    <View
        android:id="@+id/divider17"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout9" />


</androidx.constraintlayout.widget.ConstraintLayout>